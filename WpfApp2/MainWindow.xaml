<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbhello" Content="Hello World" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.448,-3.147" Height="98" Width="759" FontFamily="Arial Black" FontSize="20" FontWeight="Bold" FontStyle="Italic" FontStretch="Medium" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="btnhello" Content="Click me" HorizontalAlignment="Left" Margin="320,187,0,0" VerticalAlignment="Top" Height="122" RenderTransformOrigin="0.454,0.353" Width="186" Click="btnhello_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="2.12"/>
                    <RotateTransform Angle="-1.977"/>
                    <TranslateTransform Y="-1.051"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
